{
  "compilerOptions": {
    "module": "amd",
    "target": "ESNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "newLine": "LF",
    "baseUrl": ".",
    "allowJs": true,
    "lib": ["ESNext", "dom"],
    "outDir": "src/FileCabinet/SuiteScripts",
    "paths": {
      "N": ["node_modules/@hitc/netsuite-types/N"],
      "N/*": ["node_modules/@hitc/netsuite-types/N/*"],
    },
  },
  "exclude": ["node_modules"],
}
