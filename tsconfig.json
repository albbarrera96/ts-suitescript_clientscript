{
  "compilerOptions": {
    "module": "amd",
    "target": "ES2020",
    "sourceMap": false,
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "newLine": "LF",
    "baseUrl": ".",
    "allowJs": true,
    "lib": ["ES2020", "dom"],
    "outDir": "src/FileCabinet/SuiteScripts",
    "paths": {
      "N": ["node_modules/@hitc/netsuite-types/N"],
      "N/*": ["node_modules/@hitc/netsuite-types/N/*"]
    }
  },
  "include": ["src/ts/**/*.ts"],
  "exclude": ["node_modules"]
}
